<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <h3>Shoe Store:</h3>
      <h1><%= @shoe_store.title() %></h1>
    </div>
    <br>
    <div class="card">
      <form action="/update_shoe_store/<%= @shoe_store.id() %>" method="post">
        <div class="form-group">
          <input type="hidden" name="_method" value="patch">
          <label for="store_name">Store Name:</label>
          <input type="text" name="store_name" id="store_name" required>
          <br>
          <button type="submit" class="btn btn-warning">Update Store Name</button>
        </div>
      </form>
      <br>
    </div>
  </div>
  <br>
  <div class="col-sm-6">
    <div class="card">
      <% if @shoe_store.shoe_brands().any?() %>
        <h3>Here are all the brands sold in this store:</h3>

        <ul>
          <% @shoe_store.shoe_brands().each() do |shoe_brand| %>
            <li><%= shoe_brand.title() %> $<%= '%.02f' % shoe_brand.price %></li>
          <% end %>
        </ul>

        <% else %>
          <p>There are no brands for this store yet!</p>
      <% end %>
    </div>
    <br>
    <div class="card">
      <% if @shoe_brands.any?() %>
      <h3>Add these shoe brands to the store:</h3>

      <form action="/add_shoe_brand/<%= @shoe_store.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <% @shoe_brands.each() do |shoe_brand| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="shoe_brand_ids[]" value="<%= shoe_brand.id() %>"> <%= shoe_brand.title() %>
          </label>
        </div>
      <% end %>

        <button class="btn btn-success" type="submit">Add Brands</button>
      </form>

    <% else %>

        <p>There are no brands yet!</p>

    <% end %>

    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <button class="btn" name="home"><a href="/">Return To Homepage</a></button>
    </div>
  </div>

</div>
